<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <style>
      @import url('https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap');
      </style>
    <link rel="stylesheet" href="styles.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link
    rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha512-iBBXm8fW90+nuLcSKlbmrPcLa0OT92xO1BIsZ+ywDWZCvqsWgccV3gFoRBv0z+8dLJgyAHIhR35VZc2oM/gI1w=="
      crossorigin="anonymous"
    />
    <title>Tweety</title>
  </head>
  <body>
    <!-- LEFT SIDE NAV -->
    <div class="sidebar">

      <!-- Logo -->
      <i class="fab fa-twitter"></i>
      
      <!-- Home -->
      <a href="/" class="text-decoration-none"> 
      <div class="sidebarOption active">
        <span class="material-icons"> 
          home 
        </span>
        <h2>Home</h2>
      </div>
      </a>

      <!-- Profile -->
        <a href="/profile/<%= dataUser.username %>" class="text-decoration-none"> 
      <div class="sidebarOption">
        <span class="material-icons"> 
          perm_identity 
        </span>
          <h2>      
            Profile
          </h2>
        </div>
      </a>

      <!-- Logout -->
      <a href="/logout" class="text-decoration-none"> 
      <div class="sidebarOption">
        <span class="material-icons">
          logout
          </span>
        <h2>
            Sign out 
          </h2>
        </div>
        <!-- <button class="sidebar__tweet">Tweet</button> -->
      </div>
    </a>
    <!-- END OF LEFT SIDE NAV -->

    <!-- CONTENT -->
    <!-- feed starts -->
    <div class="feed">
      <div class="feed__header">
        <h2>Home</h2>
      </div>

      <!-- error notif -->
      <% if (errors) { %> 
        <% Object.keys(errors).forEach(key => { %> 
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error!</strong> <%= errors[key] %>  
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
        <% }) %> 
      <% } %> 

      <!-- tweetbox starts -->
      <div class="tweetBox">
        <form action="/tweets/new" method="post">
          <div class="tweetbox__input">
            <img
              src="<%= dataUser.imageURL || 'https://i.pinimg.com/originals/a6/58/32/a65832155622ac173337874f02b218fb.png' %>"
            />
              <input type="text" name="tweet" placeholder="What's happening?" />
            <div class="ms-5">
              <input type="text" name="imageURL" placeholder="image URL" />
            </div>
          </div>
          <button class="tweetBox__tweetButton">Tweet</button>
        </form>
      </div>
      <!-- tweetbox ends -->

      <!-- post starts -->
      <% data.forEach(el => { %> 
      <a href="/tweets/<%= el.id %>/detail" class="text-decoration-none">
        <div class="post">
          <div class="post__avatar">
            <img
            src="<%= el.User.Profile.imageURL || 'https://i.pinimg.com/originals/a6/58/32/a65832155622ac173337874f02b218fb.png' %>"
            />
          </div>
          <div class="post__body">
            <div class="post__header">
              <div class="post__headerText">
                <h3>
                  <%= el.User.Profile.firstName %> <%= el.User.Profile.lastName %>
                  <span class="post__headerSpecial me-3" style="font-size: 15px;">
                  <% if (el.User.isVerified) { %> 
                    <span class="material-icons post__badge"> verified </span>
                  <% } %> 
                    @<%= el.User.username %> </span> <span><%= getSince(el.updatedAt) %></span> 
                </h3>
              </div>
              <div class="post__headerDescription">
                <p><%= el.tweet %> </p>
              </div>
            </div>
            <img class="mb-2"
              src="<%= el.imageURL %> "
            />
            <div class="d-flex justify-content-end align-items-center">
              <% if (el.User.id === id) {%> 
                <a class="material-icons text-decoration-none me-3" href="/tweets/<%= el.id %>/delete"> delete </a>
              <%}%> 
             <!-- <a class="material-icons text-decoration-none"> repeat </a> -->
             <div class="d-flex align-items-center">
              <a class="material-icons me-1 fs-5 text-danger" style="text-decoration: none;" href="/tweets/<%= el.id %>/like"> favorite </a> 
              <span class="fs-6"><%= el.likesFormat %></span>
            </div>
            </div>
          </div>
        </div>
      </a>
      <% }) %> 
      <!-- post ends -->
      <!-- End of CONTENT -->

    </div>
    <!-- feed ends -->

    <!--RIGHT SIDE NAV-->
    <!-- widgets starts -->
    <div class="widgets">
      <div class="widgets__input">
        <span class="material-icons widgets__searchIcon"> search </span>
        <form action="/tweets" method="get">
          <input type="text" placeholder="Search Twitter" name="tweet" />
        </form>
      </div>

      <div class="widgets__widgetContainer">
        <h2>What's happening?</h2>
        <blockquote class="twitter-tweet">
          <p lang="en" dir="ltr">
            Sunsets don&#39;t get much better than this one over
            <a href="https://twitter.com/GrandTetonNPS?ref_src=twsrc%5Etfw">@GrandTetonNPS</a>.
            <a href="https://twitter.com/hashtag/nature?src=hash&amp;ref_src=twsrc%5Etfw"
              >#nature</a
            >
            <a href="https://twitter.com/hashtag/sunset?src=hash&amp;ref_src=twsrc%5Etfw"
              >#sunset</a
            >
            <a href="http://t.co/YuKy2rcjyU">pic.twitter.com/YuKy2rcjyU</a>
          </p>
          &mdash; US Department of the Interior (@Interior)
          <a href="https://twitter.com/Interior/status/463440424141459456?ref_src=twsrc%5Etfw"
            >May 5, 2014</a
          >
        </blockquote>
        <script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
      </div>
    </div>
    <!-- widgets ends -->
    <!--END OF RIGHT SIDE NAV-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>